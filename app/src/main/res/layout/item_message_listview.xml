<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color">

    <TextView
        android:id="@+id/tv_msg_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginTop="@dimen/dp15"
        android:hapticFeedbackEnabled="true"
        android:textColor="@color/travel_records_text_color"
        tools:text="19:38" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_un_read"
            android:layout_width="@dimen/dp10"
            android:layout_height="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:src="@drawable/point_shape" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_msg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="系统消息"
                android:textColor="@color/black_color"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:id="@+id/tv_msg_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp6"
                android:singleLine="true"
                android:textColor="@color/travel_records_text_color"
                tools:text="lads就更好了打飞机过来咯多发几个路口附近啊链接发给阿里的咖啡馆" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/my_order_halving_line_color"
        android:layout_height="@dimen/list_divider_height" />
</FrameLayout>