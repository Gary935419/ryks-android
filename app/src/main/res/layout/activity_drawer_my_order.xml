<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intercity_carpool"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.inwhoop.qscx.qscxsj.activitys.main.MyOrderListActivity">

    <include
        android:id="@+id/title_activity_login_inc"
        layout="@layout/title_base" />

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_gravity="center_horizontal"
        app:xTabBackgroundColor="@color/color_white"
        app:xTabDisplayNum="4"
        app:xTabIndicatorColor="@color/theme"
        app:xTabIndicatorHeight="@dimen/dp4"
        app:xTabIndicatorRoundX="@dimen/dp5"
        app:xTabIndicatorRoundY="@dimen/dp5"
        app:xTabIndicatorWidth="@dimen/dp10"
        app:xTabMode="fixed"
        app:xTabSelectedBackgroundColor="@color/color_white"
        app:xTabSelectedTextColor="@color/theme"
        app:xTabSelectedTextSize="@dimen/font_size_larger"
        app:xTabTextSelectedBold="true"
        app:xTabTextSize="@dimen/font_size_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e0e0e0" />


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6" />

</LinearLayout>




