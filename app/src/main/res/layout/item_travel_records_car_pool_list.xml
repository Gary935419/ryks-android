<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp12"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/dp12"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@dimen/dp10"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/layoutItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dp">

                <com.inwhoop.qscx.qscxsj.views.CircleImageView
                    android:id="@+id/civ_orderPicture"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/img_photo" />

                <TextView
                    android:id="@+id/tv_driverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/civ_orderPicture"
                    android:maxLength="6"
                    android:text="张师傅"
                    android:textColor="@color/black_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_people_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/tv_driverName"
                    android:textColor="@color/black_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_driverName"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/civ_orderPicture"
                    android:text="白色·本田思域"
                    android:textColor="@color/travel_records_text_color"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_orderCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_finish" />

                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/civ_orderPicture"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_start" />

                <ImageView
                    android:id="@+id/iv_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_location"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_end" />

                <TextView
                    android:id="@+id/tv_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_location"
                    android:layout_alignBottom="@id/iv_destination"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/iv_destination"
                    android:text="绵阳师范学院"
                    android:textColor="@color/travel_records_text_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_destination"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/tv_costUnit"
                    android:text="￥69.00"
                    android:textColor="@color/travel_cost_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_costUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_destination"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="20dp"
                    android:text="元"
                    android:textColor="@color/travel_cost_text_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_location"
                    android:layout_toEndOf="@+id/iv_location"
                    android:layout_toRightOf="@+id/iv_location"
                    android:text="成都市武侯区天府软件园G区5栋"
                    android:textColor="@color/travel_records_text_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_orderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_driverName"
                    android:layout_alignEnd="@+id/tv_cost"
                    android:layout_alignRight="@+id/tv_cost"
                    android:singleLine="true"
                    android:text="2016-11-10 10:00:00"
                    android:textColor="@color/travel_records_text_color"
                    android:textSize="11sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/im_userTelephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_telephone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_travel_records_car_pool_list_bottom_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/transparent_color"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/item_travel_records_car_pool_list_message_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="请在预约时间接乘客上车"
                    android:textColor="@color/travel_cost_text_color"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/item_travel_records_car_pool_list_ok_btn"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_selector"
                    android:text="乘客上车"
                    android:textColor="@color/white_color"
                    android:textSize="17sp" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>