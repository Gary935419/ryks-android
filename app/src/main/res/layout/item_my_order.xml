<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_background_color"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginBottom="15dp"
        android:background="@color/white_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.inwhoop.qscx.qscxsj.views.CircleImageView
                android:id="@+id/civ_portrait"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/img_photo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nameNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张师傅· 川A***14"
                    android:textColor="@color/black_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_carSituation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="白色· 本田思域"
                    android:textColor="@color/black_color"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_callNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_telephone" />

        </LinearLayout>

        <View
            android:layout_width="345dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/my_order_halving_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="由："
                android:textColor="@color/black_color"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_point_of_departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成都市武侯区天府软件园G区"
                android:textColor="@color/black_color"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到："
                android:textColor="@color/black_color"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绵阳师范学院"
                android:textColor="@color/black_color"
                android:textSize="13dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>