<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/title_activity_login_inc"
        layout="@layout/title_base" />

    <EditText
        android:id="@+id/activity_feedback_feedback_edt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp15"
        android:background="@drawable/feed_back_edit_shape"
        android:gravity="top"
        android:hint="报备内容"
        android:maxLength="300"
        android:singleLine="false"
        android:textColor="@color/black_color"
        android:textColorHint="@color/car_message_text_color"
        android:textSize="@dimen/font_size_large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/dp20"
        android:text="1-300字"
        android:textColor="@color/black_color"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/activity_feedback_ok_btn"
        style="@style/ButtonMatch"
        android:layout_gravity="center_horizontal"
        android:text="提交报备"
        android:textColor="@color/white_color"
        android:textSize="17sp" />

</LinearLayout>
