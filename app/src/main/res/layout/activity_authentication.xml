<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_authentication"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.inwhoop.qscx.qscxsj.activitys.logins.AuthenticationActivity">

    <include
        android:id="@+id/title_activity_authentication_inc"
        layout="@layout/title_base" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/activity_authentication_tip"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@color/app_background_color">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_careful" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="请正确填入信息"
                        android:textColor="@color/careful_text_color"
                        android:textSize="12sp" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white_color">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="真实姓名"
                    android:textColor="@color/black_color"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/activity_authentication_name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent_color"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/chose_text_color"
                    android:textColorHint="@color/chose_text_color"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/separate_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="性别"
                    android:textColor="@color/black_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/activity_authentication_sex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent_color"
                    android:gravity="right|center_vertical"
                    android:text="男"
                    android:textColor="@color/chose_text_color"
                    android:textColorHint="@color/chose_text_color"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/separate_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white_color">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="身份证号"
                    android:textColor="@color/black_color"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/activity_authentication_idcard_num_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent_color"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/chose_text_color"
                    android:textColorHint="@color/chose_text_color"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/separate_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="驾驶证初次领证日期"
                    android:textColor="@color/black_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/activity_authentication_date_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent_color"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/chose_text_color"
                    android:textColorHint="@color/chose_text_color"
                    android:textSize="15sp" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/separate_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/white_color">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="上传证件"
                        android:textColor="@color/black_color"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="4dp"
                        android:paddingLeft="4dp"
                        android:paddingEnd="1dp"
                        android:paddingRight="1dp"
                        android:paddingBottom="62dp">

                        <RelativeLayout
                            android:id="@+id/layoutIdCardFace"
                            android:layout_width="160dp"
                            android:layout_height="103dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="11dp"
                            android:layout_marginBottom="11dp"
                            android:background="@drawable/bg_card"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/activity_authentication_idcard_face_iv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/icon_zhengmian" />

                            <TextView
                                android:id="@+id/tv_id_card_face"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/activity_authentication_idcard_face_iv"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="10dp"
                                android:text="身份证正面" />

                            <ImageView
                                android:id="@+id/ivIdCardFace"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/layoutDrive"
                            android:layout_width="160dp"
                            android:layout_height="103dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="11dp"
                            android:layout_marginBottom="11dp"
                            android:background="@drawable/bg_card"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/activity_authentication_drive_iv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/icon_jiashizheng" />

                            <TextView
                                android:id="@+id/tv_drive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/activity_authentication_drive_iv"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="10dp"
                                android:text="驾驶证（正、副）" />

                            <ImageView
                                android:id="@+id/ivDrive"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layoutPersonCar"
                            android:layout_width="160dp"
                            android:layout_height="103dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="11dp"
                            android:layout_marginBottom="11dp"
                            android:background="@drawable/bg_card"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/activity_authentication_person_car"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/icon_rencheheying" />

                            <TextView
                                android:id="@+id/tv_car_person"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/activity_authentication_person_car"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="10dp"
                                android:text="人车合影" />

                            <ImageView
                                android:id="@+id/ivPersonCar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="1dp"
                        android:paddingLeft="1dp"
                        android:paddingEnd="4dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="62dp">

                        <RelativeLayout
                            android:id="@+id/layoutIdCardSide"
                            android:layout_width="160dp"
                            android:layout_height="103dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="11dp"
                            android:layout_marginBottom="11dp"
                            android:background="@drawable/bg_card"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/activity_authentication_idcard_side_iv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/icon_fanmian" />

                            <TextView
                                android:id="@+id/tv_id_card_side"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/activity_authentication_idcard_side_iv"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="10dp"
                                android:text="身份证反面" />

                            <ImageView
                                android:id="@+id/ivIdCardSide"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/layoutTravel"
                            android:layout_width="160dp"
                            android:layout_height="103dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="11dp"
                            android:layout_marginBottom="11dp"
                            android:background="@drawable/bg_card"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/activity_authentication_travel_iv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/icon_xingshizheng" />

                            <TextView
                                android:id="@+id/tv_travel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/activity_authentication_travel_iv"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="10dp"
                                android:text="行驶证（正、副）" />

                            <ImageView
                                android:id="@+id/ivTravel"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layoutWork"
                            android:layout_width="160dp"
                            android:layout_height="103dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="11dp"
                            android:layout_marginBottom="11dp"
                            android:background="@drawable/bg_card"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/activity_authentication_work"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/icon_touxiang" />

                            <TextView
                                android:id="@+id/tv_work"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/activity_authentication_work"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="10dp"
                                android:text="工作照" />

                            <ImageView
                                android:id="@+id/ivWork"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/activity_authentication_tip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="温馨提示：所有人姓名请保持一致"
                    android:textColor="@color/ps_text_color"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/separate_color" />

            <RelativeLayout
                android:id="@+id/activity_authentication_model_rl"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white_color"
                android:visibility="gone">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="接单模式"
                    android:textColor="@color/black_color"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/activity_authentication_model_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:hint="请选择接单模式"
                        android:textColor="@color/chose_text_color"
                        android:textColorHint="@color/chose_text_color"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_next" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/separate_color" />

            <RelativeLayout
                android:id="@+id/activity_authentication_line_rl"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white_color"
                android:visibility="gone">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="选择路线"
                    android:textColor="@color/black_color"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/activity_authentication_line_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:hint="请选择接单路线"
                        android:textColor="@color/chose_text_color"
                        android:textColorHint="@color/chose_text_color"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_next" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layoutCarNum"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white_color">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="车牌号"
                    android:textColor="@color/black_color"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/activity_authentication_car_number_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent_color"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/chose_text_color"
                    android:textColorHint="@color/chose_text_color"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCarType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/separate_color" />

                <RelativeLayout
                    android:id="@+id/activity_authentication_cartype_rl"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/white_color">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="选择车型"
                        android:textColor="@color/black_color"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/activity_authentication_cartype_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:gravity="right"
                            android:hint="请选择车型"
                            android:textColor="@color/chose_text_color"
                            android:textColorHint="@color/chose_text_color"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/icon_next" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/separate_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/white_color">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="颜色"
                        android:textColor="@color/black_color"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/activity_authentication_color_edt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@color/transparent_color"
                        android:gravity="right|center_vertical"
                        android:hint="请填写车辆颜色"
                        android:textColor="@color/chose_text_color"
                        android:textColorHint="@color/chose_text_color"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/separate_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/white_color">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="品牌"
                        android:textColor="@color/black_color"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/activity_authentication_brand"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@color/transparent_color"
                        android:gravity="right|center_vertical"
                        android:hint="请填写车辆品牌"
                        android:textColor="@color/chose_text_color"
                        android:textColorHint="@color/chose_text_color"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/separate_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="面试地点"
                    android:textColor="@color/black_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/activity_authentication_audition"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent_color"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/chose_text_color"
                    android:textColorHint="@color/chose_text_color"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/separate_color" />

            <LinearLayout
                android:id="@+id/layout_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/activity_agree_service_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/servier_rule_selector"
                    android:drawablePadding="5dp"
                    android:text="我同意并遵守"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/activity_service_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《注册协议》"
