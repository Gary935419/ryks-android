<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/title_activity_authentication_info"
        layout="@layout/title_base" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_authentication_info_ok_btn"
        android:layout_below="@+id/title_activity_authentication_info"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="15dp"
                android:text="您的申请已经收到，请耐心等待审核。"
                android:textColor="@color/black_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="一、线上审核"
                android:textColor="@color/black_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:text="平台将进行审核，资质合格后（1-3）天，会有客服人员安排培训时间，激活账号后开始接单。"
                android:textColor="@color/black_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="二、线下审核"
                android:textColor="@color/black_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:text="请携带提交资料复印件到以下地址进行现场审核。\n    公司名称：爱度网络信息科技（大连）有限公司\n    公司地址：大连市甘井子区姚胜街14号1-1-5"
                android:textColor="@color/black_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black_color"
                android:textSize="12sp" />

        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/activity_authentication_info_ok_btn"
        android:layout_width="355dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_selector"
        android:text="我知道啦"
        android:textColor="@color/white_color"
        android:textSize="17sp" />
</RelativeLayout>