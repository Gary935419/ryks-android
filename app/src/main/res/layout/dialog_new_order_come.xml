<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_color">


    <LinearLayout
        android:layout_width="@dimen/dp340"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_chengji_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp15"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp15"
            android:gravity="center"
            android:textColor="@color/title_center_back_color"
            android:textSize="@dimen/font_size_22"
            android:textStyle="bold"
            tools:text="跑腿订单" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp30"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp15"
            android:paddingEnd="@dimen/dp15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.inwhoop.qscx.qscxsj.views.CircleImageView
                    android:id="@+id/dialog_chengji_head_img_iv"
                    android:layout_width="@dimen/dp35"
                    android:layout_height="@dimen/dp35"
                    android:background="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/dialog_chengji_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp15"
                    android:textColor="@color/black_color"
                    android:textSize="15sp"
                    tools:text="乘客姓名" />

                <TextView
                    android:id="@+id/dialog_chengji_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/font_size_small"
                    tools:text="几个人" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp8" />

            <LinearLayout
                android:id="@+id/layout_start_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="始发地："
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/dialog_chengji_address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/font_size_small"
                    tools:text="开始地址开始地址开始地址开始地址开始地址开始地址开始地址" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目的地："
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/dialog_chengji_end_address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/font_size_small"
                    android:visibility="visible"
                    tools:text="结束地址结束地址结束地址结束地址结束地址结束地址结束地址" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_distance_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="始发地距离："
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tv_distance_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/font_size_small"
                    android:visibility="visible"
                    tools:text="5km" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_distance_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行程距离："
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tv_distance_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/font_size_small"
                    android:visibility="visible"
                    tools:text="5km" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间："
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tv_time_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/font_size_small"
                    android:visibility="visible"
                    tools:text="15:10" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_goods_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物品信息："
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tv_goods_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/font_size_small"
                    android:visibility="visible"
                    tools:text="15:10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注信息："
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/font_size_small"
                    android:visibility="visible"
                    tools:text="备注" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小费："
                    android:textSize="@dimen/font_size_large" />

                <TextView
                    android:id="@+id/tv_tip_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/red_color"
                    android:textSize="@dimen/font_size_large"
                    android:visibility="visible"
                    tools:text="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总费用："
                    android:textSize="@dimen/font_size_large" />

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="@color/red_color"
                    android:textSize="@dimen/font_size_large"
                    android:visibility="visible"
                    tools:text="20" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_divider_height"
            android:background="@color/separate_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_refuse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent_color"
                android:text="拒绝"
                android:textColor="@color/dialog_title_text_color"
                android:textSize="@dimen/font_size_large" />

            <View
                android:layout_width="@dimen/item_divider_height"
                android:layout_height="@dimen/dp25"
                android:background="@color/separate_color" />

            <Button
                android:id="@+id/btn_receive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent_color"
                android:text="接单"
                android:textColor="@color/title_center_back_color"
                android:textSize="@dimen/font_size_large"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="25dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/bg_time" />

        <TextView
            android:id="@+id/dialog_chengji_js_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="30s"
            android:textColor="@color/white_color"
            android:textSize="22sp" />

    </FrameLayout>

</RelativeLayout>
