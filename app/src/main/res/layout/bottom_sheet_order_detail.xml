<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:gravity="center"
        android:text="订单详情"
        android:textColor="@color/home_text"
        android:textSize="@dimen/font_size_larger" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_divider_height"
        android:background="@color/hint_text" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.inwhoop.qscx.qscxsj.views.CircleImageView
            android:id="@+id/iv_myPortrait"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dp10"
            android:src="@mipmap/img_photo" />

        <TextView
            android:id="@+id/tv_driverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/iv_myPortrait"
            android:maxLength="6"
            android:textColor="@color/black_color"
            android:textSize="17sp"
            tools:text="张师傅" />

        <TextView
            android:id="@+id/tv_orderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_driverName"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/iv_myPortrait"
            android:textColor="@color/travel_records_text_color"
            android:textSize="14sp"
            tools:text="2016-11-10 10:00:00" />

        <ImageView
            android:id="@+id/im_userTelephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_telephone" />
    </RelativeLayout>

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        android:background="@color/separate_color" />

    <LinearLayout
        android:id="@+id/layout_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="由："
            android:textColor="@color/black_color"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:textSize="@dimen/font_size_normal"
            tools:text="成都市武侯区天府软件园G区成都市武侯区天府软件园G区成都市武侯区天府软件园G区成都市武侯区天府软件园G区成都市武侯区天府软件园G区" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="@dimen/dp4"
        android:layout_marginEnd="@dimen/dp10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到："
            android:textColor="@color/black_color"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/tv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:textSize="@dimen/font_size_normal"
            tools:text="绵阳师范学院" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        android:background="@color/separate_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp10"
        android:paddingEnd="@dimen/dp10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单价格"
            android:textColor="@color/content_text"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/tv_price_start_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme"
            android:textSize="@dimen/font_size_normal"
            tools:text="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp10"
        android:paddingEnd="@dimen/dp10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="公里数"
            android:textColor="@color/content_text"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/tv_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme"
            android:textSize="@dimen/font_size_normal"
            tools:text="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp10"
        android:paddingEnd="@dimen/dp10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="小费"
            android:textColor="@color/content_text"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/tv_price_little"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme"
            android:textSize="@dimen/font_size_normal"
            tools:text="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingStart="@dimen/dp10"
        android:paddingEnd="@dimen/dp10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="保价费"
            android:textColor="@color/content_text"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/tv_price_keep_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme"
            android:textSize="@dimen/font_size_normal"
            tools:text="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp10"
        android:paddingEnd="@dimen/dp10">

        <TextView
            android:id="@+id/tv_receive_order_time_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="接单时间"
            android:textColor="@color/content_text"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/tv_receive_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme"
            android:textSize="@dimen/font_size_normal"
            tools:text="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp10"
        android:paddingEnd="@dimen/dp10">

        <TextView
            android:id="@+id/tv_get_goods_time_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取件时间"
            android:textColor="@color/content_text"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/tv_get_goods_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme"
            android:textSize="@dimen/font_size_normal"
            tools:text="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp10"
        android:paddingEnd="@dimen/dp10">

        <TextView
            android:id="@+id/tv_finish_time_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="完成时间"
            android:textColor="@color/content_text"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/tv_finish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme"
            android:textSize="@dimen/font_size_normal"
            tools:text="10" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_sure"
        style="@style/ButtonMatch"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp10"
        android:text="确认" />
</LinearLayout>